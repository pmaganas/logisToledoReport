# Credenciales de Administrador (REQUERIDAS)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=cambiar_password_seguro

# Configuración de Base de Datos PostgreSQL (REQUERIDAS)
POSTGRES_DB=sesame_reports
POSTGRES_USER=sesame_user
POSTGRES_PASSWORD=cambiar_password_db_seguro

# Configuración de Flask (REQUERIDAS)
FLASK_SECRET_KEY=cambiar_por_clave_secreta_aleatoria_larga
SESSION_SECRET=cambiar_por_otra_clave_secreta_aleatoria

# Puerto de la Aplicación (opcional, default: 5000)
PORT=5000

# Puerto de Base de Datos (opcional, default: 5432)
DB_PORT=5432

# Configuración de Workers Gunicorn (opcional, default: 4)
WEB_CONCURRENCY=4

# Nivel de Logging (opcional, default: INFO)
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Máximo de reportes almacenados (opcional, default: 10)
MAX_REPORTS=10

# Puerto para modo desarrollo (opcional, default: 5001)
DEV_PORT=5001