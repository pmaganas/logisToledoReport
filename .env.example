# Configuración de Base de Datos
DATABASE_URL=sqlite:///instance/sesame_reports.db
DB_POOL_RECYCLE=300
DB_POOL_PRE_PING=true

# Configuración de Seguridad (REQUERIDO)
SESSION_SECRET=your_secret_key_here_min_32_chars
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_password_here

# Configuración de API Sesame
API_TIMEOUT=30
API_MAX_RETRIES=3
API_BACKOFF_FACTOR=0.3
API_PAGE_SIZE=500
API_POOL_CONNECTIONS=10
API_POOL_MAXSIZE=10

# Configuración de Reportes
MAX_REPORTS=10
TEMP_REPORTS_DIR=temp_reports
REPORT_MAX_PAGES=100
REPORT_CHUNK_SIZE=1000

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
SUPPRESS_URLLIB3_LOGS=true

# Configuración de Sesiones
SESSION_PERMANENT=true